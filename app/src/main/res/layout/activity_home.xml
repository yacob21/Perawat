<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/mainBackground"
    tools:context="com.perawat.yacob.perawat.HomeActivity" android:baselineAligned="false">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:layout_weight="0.35"
        android:background="@drawable/backgroundfragment"
        android:orientation="vertical"
        android:padding="0dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="#094dbd"
            android:gravity="center"
            android:text="Rangkuman Pasien"
            android:textColor="#fff" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:padding="5dp">

            <ImageView
                android:id="@+id/ivTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/total_b" />

            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="1"
                android:textSize="30sp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp">

            <ImageView
                android:id="@+id/ivInap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/inap_a" />

            <TextView
                android:id="@+id/tvInap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="1"
                android:textSize="30sp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp">

            <ImageView
                android:id="@+id/ivIcu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icu_a" />

            <TextView
                android:id="@+id/tvIcu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="1"
                android:textSize="30sp" />


        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.65"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvJudul"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:background="#999999"
            android:gravity="center"
            android:padding="10dp"
            android:text="PASIEN"
            android:textColor="#fff" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/cardListPasien"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>

</LinearLayout>
